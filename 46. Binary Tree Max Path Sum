class Solution {
    int maxSum=Integer.MIN_VALUE;
    public int maxPathSum(TreeNode root) {
        calcMaxFromNode(root);
        return maxSum;    
    }
    private int calcMaxFromNode(TreeNode root){

        if(root==null) return 0;
        int leftMax=Math.max(0,calcMaxFromNode(root.left));
        int rightMax=Math.max(0,calcMaxFromNode(root.right));
        maxSum=Math.max(maxSum,leftMax+rightMax+root.val);
        return root.val+ Math.max(rightMax,leftMax);
    }
}
