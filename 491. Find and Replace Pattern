class Solution {
    public List<String> findAndReplacePattern(String[] words, String pattern) {
        List<String> matchedWords=new ArrayList<>();
        for(String word:words){
            if(doesWordMatchPattern(word,pattern)){
                matchedWords.add(word);                
            }
        }
        return matchedWords;
    }

    private boolean doesWordMatchPattern(String word,String pattern){

        int[] wordToPatternMap=new int[128];
        int[] patternToWordMap=new int[128];
        for(int i=0;i<word.length();i++){
            char wordChar=word.charAt(i);
            char patternChar=pattern.charAt(i);
            if(wordToPatternMap[wordChar]!=patternToWordMap[patternChar]) return false;
            wordToPatternMap[wordChar]=i+1;
            patternToWordMap[patternChar]=i+1;
        }
        return true;
    }
}
