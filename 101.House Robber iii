class Solution {
    public int rob(TreeNode root) {
        
        int[] res=robSubTree(root);
        return Math.max(res[0],res[1]);
    }
    private int[] robSubTree(TreeNode root){

            if(root==null) return new int[2];
            int[] leftRes=robSubTree( root.left);
        int[] rightRes=robSubTree( root.right);
        int Rob=root.val+leftRes[1]+rightRes[1];
        int noRob=Math.max(leftRes[0],leftRes[1])+Math.max(rightRes[0],rightRes[1]);

        return new int[]{Rob,noRob};
    }
}
